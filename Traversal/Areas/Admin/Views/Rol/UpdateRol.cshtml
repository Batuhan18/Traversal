@model UpdateRolViewModel
@{
    ViewData["Title"] = "UpdateRol";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="RolId" />
    <label>Rol Adı</label>
    <input type="text" class="form-control" asp-for="RolName" />
    <br />
    <button class="btn btn-outline-success">Rolü Güncelle</button>
</form>