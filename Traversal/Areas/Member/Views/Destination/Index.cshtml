@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Aktif Tur Rotalarımız</h1>

<form method="get" asp-action="GetCitiesSearchByName" asp-area="Member">
    <div>
        <p>Aranacak Şehri Griniz: <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" /></p>
        <br />
        <input type="submit" value="Şehir Ara" class="btn btn-outline-dark" />
    </div>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Süre</th>
            <th>Kapasite</th>
            <th>Fiyat</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DestinationID</td>
                <td>@item.City</td>
                <td>@item.DayNight</td>
                <td>@item.Capacity</td>
                <td>@item.Price$</td>
                <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
            </tr>
        }
    </table>
</form>